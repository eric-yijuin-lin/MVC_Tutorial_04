@model IEnumerable<MVC_Tutorial_04.Models.TblUser>;
<!-- Page Wrapper -->
<div id="wrapper">
    <partial name="_Sidebar" />
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <partial name="_Topbar" />
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Tables</h1>
                <p class="mb-4">
                    DataTables is a third party plugin that is used to generate the demo table below.
                    For more information about DataTables, please visit the <a target="_blank"
                                                                               href="https://datatables.net">official DataTables documentation</a>.
                </p>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserAccout)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserMail)
                                        </th>
                                        <th>
                                            @*保留給 Details | Edit | Delete*@
                                        </th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserAccout)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CUserMail)
                                        </th>
                                        <th>
                                            @*保留給 Details | Edit | Delete*@
                                        </th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CUserId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CUserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CUserAccout)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CUserMail)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.CUserId">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.CUserId">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.CUserId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<partial name="_LogoutModal" />

@section scripts {
    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>
}